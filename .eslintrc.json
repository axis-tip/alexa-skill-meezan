{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "ecmaFeatures": {
    "modules": true
  },
  "installedESLint": true,
  "rules": {
    "new-cap": "off",
    "class-methods-use-this": "off",
    "semi": [
      2,
      "always"
    ],
    "quotes": [
      2,
      "single"
    ],
    "no-unused-vars": [
      2,
      {
        "varsIgnorePattern": "^ssml$"
      }
    ],
    "react/react-in-jsx-scope": "off",
    "react/jsx-filename-extension": "off"
  },
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  }
}
